<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <!-- Imagen del Inmueble -->
        <ImageView
            android:id="@+id/ivInmueble"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:src="@drawable/placeholder_inmueble"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:clipToOutline="true" />

        <!-- Botón para abrir cámara -->
        <Button
            android:id="@+id/btnAbrirCamara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir cámara"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#03DAC5"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Toggle / Switch -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchActivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activo"
            android:checked="false"
            android:enabled="false"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/switch_track_color" />

        <!-- Código y Ambientes en fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- Código -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Código"
                android:enabled="false"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="#BB86FC"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCodigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Ambientes -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ambientes"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="#BB86FC"
                android:layout_marginStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAmbientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Dirección -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="#BB86FC"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Precio -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="#BB86FC"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Uso y Tipo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- Uso -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Uso"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="#BB86FC"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tipo -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Tipo"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="#BB86FC"
                android:layout_marginStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Texto para errores -->
        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#D32F2F"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium" />

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUARDAR"
            android:textAllCaps="false"
            android:backgroundTint="#6200EE"
            android:textColor="@android:color/white"
            android:paddingVertical="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>
</ScrollView>
